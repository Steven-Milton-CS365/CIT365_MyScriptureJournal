@page
@model MyScriptureJournal.Pages.Journal.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        <select asp-for="BookSelect" asp-items="Model.Book">
            <option value="">All</option>
        </select>

        Keyword: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
        
        <select ></select>
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Journal[0].Book)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Journal[0].Reference)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Journal[0].Scripture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Journal[0].Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Journal[0].EntryDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Journal)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Book)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reference)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Scripture)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EntryDate)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
